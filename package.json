{
  "name": "@naviary-sanctuary/schema-gen",
  "version": "0.2.4",
  "description": "Automatically generate validation schemas from TypeScript class definitions",
  "type": "module",
  "author": "Naviary Sanctuary",
  "license": "MIT",
  "keywords": [
    "schema",
    "validation",
    "typebox",
    "elysia",
    "zod",
    "codegen",
    "cli",
    "bun",
    "typescript",
    "generator"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Naviary-Sanctuary/schema-gen.git"
  },
  "bugs": {
    "url": "https://github.com/Naviary-Sanctuary/schema-gen/issues"
  },
  "homepage": "https://github.com/Naviary-Sanctuary/schema-gen#readme",
  "engines": {
    "bun": ">=1.0.0",
    "node": ">=18.0.0"
  },
  "bin": {
    "schema-gen": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "bun run clean && bun build ./src/cli.ts --outdir ./dist --target node --external cac --external es-toolkit --external picocolors --external ts-morph && bun run build:lib && bun run build:types",
    "build:lib": "bun build ./src/index.ts --outdir ./dist --target node --format esm --external cac --external es-toolkit --external picocolors --external ts-morph",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "clean": "rm -rf dist",
    "dev": "bun run ./src/cli.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint src",
    "format": "oxfmt src",
    "format:check": "oxfmt --check src",
    "prepublishOnly": "bun run build && bun run test && bun run typecheck",
    "prepare": "husky"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "es-toolkit": "^1.44.0",
    "fast-glob": "^3.3.3",
    "picocolors": "^1.1.1",
    "ts-morph": "^27.0.2"
  },
  "devDependencies": {
    "@types/bun": "1.3.8",
    "@types/node": "^22.13.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.27.0",
    "oxlint": "^1.42.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  }
}
